<!DOCTYPE html>
<html lang="bn">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ST Cloud Dashboard</title>
  <style>
    body {
      font-family: Arial;
      padding: 20px;
      background: #eef3ff;
    }
    h2 {
      text-align: center;
    }
    input[type="file"] {
      margin: 20px auto;
      display: block;
    }
    #file-list a {
      display: block;
      margin: 5px 0;
      color: #2c3e50;
    }
  </style>
</head>
<body>
  <h2>ফাইল আপলোড করুন</h2>
  <input type="file" id="fileInput" />
  <div id="file-list"><strong>আপলোডকৃত ফাইল:</strong><br/></div>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
    import { getStorage, ref, uploadBytes, listAll, getDownloadURL } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-storage.js";

    const firebaseConfig = {
      apiKey: "AIzaSyCasWfAhcDfBZtJ99GvCWjq-25gDUMm9mI",
      authDomain: "st-tasin.firebaseapp.com",
      projectId: "st-tasin",
      storageBucket: "st-tasin.appspot.com",
      messagingSenderId: "527708162675",
      appId: "1:527708162675:web:c5da3ffae8441c36eff806",
      measurementId: "G-LM0WFH77LY"
    };

    const app = initializeApp(firebaseConfig);
    const storage = getStorage(app);

    const fileInput = document.getElementById("fileInput");
    const fileList = document.getElementById("file-list");

    fileInput.addEventListener("change", async (e) => {
      const file = e.target.files[0];
      if (!file) return;

      const fileRef = ref(storage, "uploads/" + file.name);
      await uploadBytes(fileRef, file);
      alert("✅ আপলোড সম্পন্ন!");

      showFiles(); // আপলোডের পর ফাইল দেখাও
    });

    async function showFiles() {
      const listRef = ref(storage, "uploads");
      const res = await listAll(listRef);
      fileList.innerHTML = "<strong>আপলোডকৃত ফাইল:</strong><br/>";

      for (const item of res.items) {
        const url = await getDownloadURL(item);
        const link = document.createElement("a");
        link.href = url;
        link.textContent = item.name;
        link.target = "_blank";
        fileList.appendChild(link);
      }
    }

    showFiles();
  </script>
</body>
</html>
